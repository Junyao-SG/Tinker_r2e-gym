FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends git && \
    rm -rf /var/lib/apt/lists/*

# Install only what the proxy needs
COPY src/ /app/src/
COPY pyproject.toml /app/
RUN pip install --no-cache-dir -e . tinker

EXPOSE 8080

ENTRYPOINT ["python", "-m", "tinker_r2egym.tinker_proxy"]
